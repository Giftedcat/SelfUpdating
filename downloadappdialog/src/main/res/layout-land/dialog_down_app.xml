<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7F000000"
    android:clipChildren="false"
    android:gravity="center"
    tools:ignore="MissingDefaultResource">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_modular_bg"
        android:orientation="vertical"
        app:layout_heightPercent="43.5%h"
        app:layout_widthPercent="39%w">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-30dp"
            android:background="@drawable/shape_oval"
            android:contentDescription="使用"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_update"
            app:layout_heightPercent="16%w"
            app:layout_widthPercent="16%w" />

        <TextView
            android:id="@+id/home_tv_appName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="更新模块"
            android:textColor="@color/grey"
            app:layout_marginBottomPercent="1.3%h"
            app:layout_marginTopPercent="1.3%h"
            app:layout_textSizePercent="3%sh" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginBottomPercent="3%h"
            app:layout_marginLeftPercent="1.7%w"
            app:layout_marginRightPercent="1.7%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.5"
                    app:layout_textSizePercent="3%sh" />

            </com.zhy.android.percent.support.PercentLinearLayout>

        </androidx.core.widget.NestedScrollView>

    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>